<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Basket Web Admin App - Admin Ads</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet">
  </head>

  <body class="text-center">
    <% ['Users','News','Ads' ].forEach(table =>{ %>


    <div class="div-container modal-content rounded-6 shadow ">
        <h1 class="h3 mb-3 fw-normal text-white bg-primary"><%= table %>' table</h1>
        <div class="row row-cols-1 row-cols-md-3 gx-4">
            <% collection.forEach((data, dataIndex) =>{ %>
                        <div class="col themed-grid-col"> 
                        <%if (table === 'Users'){%>
                          <p><%=data.username %></p>
                          <p><%=data.email %></p>
                          <p><%=data.name %></p>
                          <p><%=data.lastname %></p>
                          <p><%=data.role %></p>

                            <form action="<%=/table/data._id%>" method="post" > 
                                <button class="w-100 btn btn-sm btn-outline-secondary" type="submit">Delete</button> 
                            </form> 
                        <%}else{%>
                          <p><%=data.title %></p>
                          <p><%=data.subtitle %></p>
                          <p><%=data.new_date %></p>
                          <p><%=data.media_name %></p>
                          <p><%=data.media_type %></p>
                          <p><%=data.imgUrl %></p>
                          <p><%=data.info %></p>

                          <form action="<%= /table/data._id %>" method="put" > 
                            <button class="w-100 btn btn-sm btn-outline-primary" type="submit">Edit</button> 
                        </form> 
                            <form action="<%=/table/data._id%>" method="post" > 
                                <button class="w-100 btn btn-sm btn-outline-secondary" type="submit">Delete</button> 
                            </form> 
                       <% }%>

                         

                            
                        </div>
            <% }); %>
                </div>
                </div>
            <% });%>
  </body>
</html>


